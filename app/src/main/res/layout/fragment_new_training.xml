<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTrainingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newTrainingFragmentConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleNewTrainingTextView"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="My Training"
            android:textSize="30sp"
            android:textStyle="bold"
            android:shadowColor="#0E0E0E"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.6"
            android:textColor="#EDFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aboutAppTextView"
            android:layout_width="323dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="This is application for people exercising in the gym. You can start a new training, choose the exercise, save results, personal records and more... "
            android:textAlignment="center"
            android:textColor="#F1EBEB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleNewTrainingTextView" />

        <TextView
            android:id="@+id/sentendceTextView"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="&quot;Take care of your body.\n It's the only place you have to live &quot; "
            android:textColor="#F3EFEF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/sentenseTextView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startNewTrainingButton"
            app:layout_constraintVertical_bias="0.966" />

        <TextView
            android:id="@+id/discoverTextView"
            android:layout_width="328dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:text="Discover the possibilities of My Training"
            android:textAlignment="center"
            android:textColor="#F1EBEB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutAppTextView" />

        <TextView
            android:id="@+id/sentenseTextView2"
            android:layout_width="128dp"
            android:layout_height="22dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="50dp"
            android:text="~ Jim Rohn"
            android:textColor="#F3EFEF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sentendceTextView"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/startNewTrainingButton"
            android:layout_width="323dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:text="Start new training"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discoverTextView" />

        <TextView
            android:id="@+id/WEIGHT"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:visibility="gone"
            android:gravity="center"
            android:shadowColor="#0E0E0E"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.6"
            android:text="Your weight:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/yourWeightEditTextNumberDecimal"
            app:layout_constraintTop_toTopOf="@id/yourWeightEditTextNumberDecimal" />

        <EditText
            android:id="@+id/yourWeightEditTextNumberDecimal"
            android:layout_width="70sp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:ems="10"
            android:hint="weight"
            android:inputType="numberDecimal"
            android:shadowColor="#0E0E0E"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.6"
            android:textColor="#FFFFFF"
            android:textColorHint="#C1FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discoverTextView" />
        <Button
            android:id="@+id/changeWeightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change weight"
            app:layout_constraintLeft_toRightOf="@+id/KG"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/KG"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/KG"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:shadowColor="#0E0E0E"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.6"
            android:text="kg"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/yourWeightEditTextNumberDecimal"
            app:layout_constraintTop_toTopOf="@id/yourWeightEditTextNumberDecimal" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>