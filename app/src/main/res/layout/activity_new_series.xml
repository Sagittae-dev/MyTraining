<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newSeriesConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kettelbackgound"
    tools:context=".newtraining.NewSeriesActivity">

    <EditText
        android:id="@+id/weightEditTextNumber"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#717171"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setYourWeightButton" />

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="187dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Weight(kg)"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weightEditTextNumber" />

    <TextView
        android:id="@+id/repsTextView"
        android:layout_width="94dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Reps"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightTextView" />

    <EditText
        android:id="@+id/repsEditTextNumber"
        android:layout_width="136dp"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Reps"
        android:inputType="number"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#717171"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/repsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/repsTextView"
        app:layout_constraintTop_toBottomOf="@+id/weightEditTextNumber"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/volumeTextView"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Volume in this serie"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneRepMaxTextView" />

    <Button
        android:id="@+id/submitSerieButton"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="232dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:background="#E46E6E6E"
        android:backgroundTint="#373535"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/annotationTextView" />

    <Button
        android:id="@+id/goBackToTrainingButton"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="232dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="#E46E6E6E"
        android:backgroundTint="#373535"
        android:text="Back to training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitSerieButton" />

    <TextView
        android:id="@+id/annotationTextView"
        android:layout_width="179dp"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Short annotation: \n (max 15 chars)"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumeTextView" />

    <EditText
        android:id="@+id/annotationEditText"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Annotation"
        android:inputType="textPersonName"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#717171"
        app:layout_constraintLeft_toRightOf="@+id/annotationTextView"
        app:layout_constraintTop_toBottomOf="@+id/volumeTextView" />

    <TextView
        android:id="@+id/oneRepMaxTextView"
        android:layout_width="346dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:shadowColor="#0E0E0E"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Your one rep max:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/repsTextView"
        app:layout_constraintTop_toBottomOf="@+id/repsTextView" />

    <Button
        android:id="@+id/setYourWeightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set your weight"
        tools:layout_editor_absoluteX="252dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>