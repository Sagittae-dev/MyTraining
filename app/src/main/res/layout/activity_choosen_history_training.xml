<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gymwallpaper"
    tools:context=".traininghistory.ChoosenHistoryTrainingActivity">

    <TextView
        android:id="@+id/dateAndTimeTextView"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Date and time"
        android:textColor="#EADFDF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountNameTextView"
        android:layout_width="297dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="39dp"
        android:gravity="center"
        android:text="Account name"
        android:textColor="#E6DBDB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/exercisesInOneTrainingRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateAndTimeTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercisesInOneTrainingRecyclerView"
        android:layout_width="0dp"
        android:layout_height="395dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#EFE4E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountNameTextView" />

    <TextView
        android:id="@+id/annotationsInOneTrainingTextView"
        android:layout_width="339dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:text="Annotations in training"
        android:textColor="#FAF4F4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisesInOneTrainingRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>