<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamesHistoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gamesHistoryItemConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:background="#FD8282AC"
        android:backgroundTint="#87B0BD"
        >


        <TextView
            android:id="@+id/timeDateTextView"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="@string/textview"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accountNameTextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="end"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeDateTextView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="160dp"
            android:layout_height="31dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Click to see full training"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstExerciseInTrainingTextView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/firstExerciseInTrainingTextView"
            android:layout_width="144dp"
            android:layout_height="23dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="First Exercise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeDateTextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="18dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text=".\n.\n."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/firstExerciseInTrainingTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>